@model TravelBookingSystem.Models.Destinations

@{
    ViewData["Title"] = "Delete Destinations";
}

<h1 class="text-center">Delete Destinations</h1>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete the destination: <strong>@Model.Name</strong>?
</div>

<form method="post">
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

